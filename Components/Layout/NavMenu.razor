@using OnlineLearningPlatform.Models
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">OnlineCoursPlateforme</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="create-course">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Create Course
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <span class="nav-link disabled">
                <strong>Courses</strong>
            </span>
            @foreach (var course in courses)
            {
                <NavLink class="nav-link" href="@($"course/{course}")">
                    <span class="bi bi-book-fill-nav-menu" aria-hidden="true"></span> @course
                </NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private string[] courses = Array.Empty<string>();

    protected override void OnInitialized()
    {
        courses = Directory.GetFiles("./Courses", "*.json")?
            .Select(Path.GetFileNameWithoutExtension)
            .Where(x => x != null)
            .Select(x => x!)
            .ToArray() ?? Array.Empty<string>();
    }
}